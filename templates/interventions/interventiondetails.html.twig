{% extends 'base.html.twig' %}

{% block title %}Village des Solutions (Afpa Chatellerault) - Interventions Details
{% endblock %}

{% block body %}

	<section class="pt-[8%] container mx-auto pb-[18%]">

<h2 class="text-center text-3xl font-semibold mb-[4%]">{{interventions.title}}</h2>
<h2 class=" font-semibold pb-6">Participants actuel : {{participants | length}}</h2>
<h2 class=" font-semibold pb-6">Places restantes : {{interventions.places}}</h2>


		{% if participants is not empty %}
			<div class="relative overflow-x-auto shadow-lg rounded-lg">
				<table class="w-full text-sm  text-left rtl:text-right text-gray-500 dark:text-gray-400">
					<thead class="text-xs text-gray-700 uppercase bg-[#b5d997] dark:bg-gray-700 dark:text-gray-400">
						<tr>
							<th scope="col" class="px-6 py-3">
								Prénom
							</th>
							<th scope="col" class="px-6 py-3">
								Nom
							</th>
							<th scope="col" class="px-6 py-3">
								Email
							</th>
							<th scope="col" class="px-6 py-3">
								Téléphone
							</th>
							<th scope="col" class="px-6 py-3">
								Contacter
							</th>
							<th scope="col" class="px-6 py-3">
								Editer
							</th>
						</tr>
					</thead>
					<tbody>
						{% for participant in participants %}
							<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
								<td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
									{{participant.firstname}}
								</td>
								<td class="px-6 py-4">
									{{participant.lastname}}
								</td>
								<td class="px-6 py-4">
									{{participant.email}}
								</td>
								<td class="px-6 py-4">
									+33{{participant.phone}}
								</td>
								<td class="px-6 py-4">
									<a href="#"><img src="{{asset('images/contactlogo.png')}}" class="h-8" alt="contact logo"></a>
								</td>
								<td>
								<a href="{{path('app_delete_participant', {id: participant.id })}}">
											<button class="rounded-full group flex items-center justify-center focus-within:outline-red-500">
												<svg width="34" height="34" viewbox="0 0 34 34" fill="none" xmlns="http://www.w3.org/2000/svg">
													<circle class="fill-red-50 transition-all duration-500 group-hover:fill-red-400" cx="17" cy="17" r="17" fill=""/>
													<path class="stroke-red-500 transition-all duration-500 group-hover:stroke-white" d="M14.1673 13.5997V12.5923C14.1673 11.8968 14.7311 11.333 15.4266 11.333H18.5747C19.2702 11.333 19.834 11.8968 19.834 12.5923V13.5997M19.834 13.5997C19.834 13.5997 14.6534 13.5997 11.334 13.5997C6.90804 13.5998 27.0933 13.5998 22.6673 13.5997C21.5608 13.5997 19.834 13.5997 19.834 13.5997ZM12.4673 13.5997H21.534V18.8886C21.534 20.6695 21.534 21.5599 20.9807 22.1131C20.4275 22.6664 19.5371 22.6664 17.7562 22.6664H16.2451C14.4642 22.6664 13.5738 22.6664 13.0206 22.1131C12.4673 21.5599 12.4673 20.6695 12.4673 18.8886V13.5997Z" stroke="#EF4444" stroke-width="1.6" stroke-linecap="round"/>
												</svg>
											</button>
										</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% else %}
			<div class="mt-6 bg-yellow-100 shadow-lg border-yellow-500 text-yellow-700 p-4">
				Aucun participant inscrit pour cette intervention
			</div>
		{% endif %}

	</section>
{% endblock %}
