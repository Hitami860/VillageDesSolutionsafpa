{% extends 'base.html.twig' %}

{% block title %}Inscription à une intervention
{% endblock %}

{% block body %}

	{% for Message in app.flashes('registersuccess') %}
		<div class="pt-[5%] mb-4 text-sm text-green-800">
			{{Message}}
		</div>
	{% endfor %}

	<section class="pt-[7%] pb-8 bg-gray-100">
		<div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-8">
			<h1 class="text-2xl text-center font-semibold text-gray-800 mb-6">Inscription à une intervention</h1>

			{{ form_start(form) }}

			<div class="mb-6">
				{{ form_row(form.firstname, {
              'label': 'Votre Prénom',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
			</div>

			<div class="mb-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
				{{ form_row(form.lastname, {
                'label': 'Votre Nom',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-300'}
            }) }}
			</div>

			<div>
				{{ form_row(form.email, {
                'label': 'Votre email (Nous vous enverrons un mail de confirmation d/inscription)',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-300'}
            }) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.phone, {
                'label': 'Votre numéro de téléphone (Facultatif)',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
			</div>

			<div class="mb-6">
				{{ form_row(form.interventions, {
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
			</div>

			<div class="text-center">
				<button type="submit" class="w-full bg-[#b5d997] text-white py-3 px-6 rounded-lg hover:bg-green-400 focus:outline-none focus:ring-2 focus:ring-green-300">S'inscrire à l'intervention</button>
			</div>

			{{ form_end(form) }}
		</div>
	</section>

{% endblock %}
